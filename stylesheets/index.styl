@import '../node_modules/nib'

@keyframes shake
  0%
    margin-left -20px
  20%
    margin-left 20px
  40%
    margin-left -20px
  60%
    margin-left 20px
  80%
    margin-left -20px
  100%
    transform 0

global-reset()

*
  box-sizing border-box

html, body
  height 100%
  font-family '_cracked', 'Georgia', serif

a
  color black
  text-decoration none

@font-face
  font-family '_cracked'
  src url('fonts/cracked.woff')

#layout-container
  min-height 100%

#layout-bg
  background url('images/bg.jpg')
  background-size auto 100%
  position fixed
  z-index -1
  top 0
  left 0
  width 100%
  height 100%

#index-title img
  width 40%
  margin 30px

#layout-footer
  margin 30px
  font-size 16px
  position fixed
  bottom 0
  a
    border-bottom 2px solid black

#ghost-buffalo
  position absolute
  top 20px
  right 20px
  height 90%
  cursor pointer
  left calc(100% - 400px)
  &.active
    animation shake 0.3s infinite

.wood-button
  background url('images/button.png') no-repeat center center
  background-size contain
  width 250px
  display block
  font-size 60px
  font-family '_cracked', 'Georgia', serif
  height 80px
  text-align center
  margin-bottom 10px
  padding 5px 0
  cursor pointer

#index-buttons
  margin-left 30px
  .wood-button:nth-child(2)
    margin-left 10%
  .wood-button:nth-child(3)
    margin-left 20%

.wood-button-small-text
  font-size 42px
  line-height 0.7em
  padding-top 13px
  letter-spacing 6px

#cartoons-image-container
  text-align center
  height 100%
  width 100%
  padding 20px
  padding-bottom 120px
  small
    font-size 18px
    margin 5px 0 20px 0
    display block
    text-align left

#cartoons-image
  max-width 100%
  max-height 90%

.cartoons-image-link-container
  display inline-block
  height calc(100% - 50px)

#cartoons-image-link
  font-weight bold
  font-size 42px
  border-bottom 3px solid

#sidebar
  width 130px
  position fixed
  top 20px
  left 20px
  z-index 2
  a, img
    max-width 100%
  .wood-button
    height 60px
    width 170px
    font-size 36px
    padding 10px 0
  .wood-button-small-text
    font-size 22px
    padding 15px 0
    letter-spacing 3px
  a:first-child
    margin-bottom 10px
    width 170px
    display block
    img
      width 100%

.sidebar-padding
  padding-left 180px !important

#animations
  background #DFFFFE
  width 590px
  margin auto
  text-align center
  li
    display inline-block
    padding 50px 0
    &:first-child
      padding-top 20px

#interactive-cartoons
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  text-align center
  li
    top 50%
    position relative

#interactive-cartoons-caption
  font-size 18px
  margin-top 10px
  
#cartoons-image-container
  h1
    font-size 32px
    margin 40px 0 20px 0
    &:first-child
      margin-top 0